<h1>Products</h1>
<ul>
  <li>  <%= link_to "Home", root_path %> </li>
  <li><%= link_to "Add Product", new_product_path %></li>
</ul>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Product Code</th>
      <th>Product Version</th>
      <th>Product Name</th>
      <th>Reorder Level</th>
      <th>Is Enabled</th>
      <th>Effective Date</th>
      <th>Unit Price</th>
      <th>Unit Type</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p| %>
      <tr>
        <td><%= p.product_code %></td>
        <td><%= p.product_version %></td>
        <td><%= p.product_name %></td>
        <td><%= p.reorder_level %></td>
        <td><%= p.is_enabled %></td>
        <td><%= p.effective_date %></td>
        <td><%= p.unit_price %></td>
        <td><%= p.unit_type %></td>
        <td>
          <%= link_to "Add new version", edit_product_path(p) %>
          |
         <%= link_to "Delete", product_path(p), :method => :delete, :class => "btn btn-danger btn-small", :confirm => "Are you sure you want to delete this??" %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
